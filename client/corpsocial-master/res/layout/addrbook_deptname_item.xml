<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/addrbook_depart_name_left"
            style="@style/FrequenContactLeft"
            android:gravity="center_vertical"
            android:text="@string/addrbook_department"/>

        <TextView
            android:id="@+id/addrbook_depart_name"
            style="@style/FrequenContactRight"
            android:layout_toRightOf="@id/addrbook_depart_name_left"
            android:gravity="center_vertical"/>

        <ImageView
            style="@style/HorizontalGaryLine"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>