<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/workgrp_detail_userinfoid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/workgrp_detail_user_headid"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="12dp"
            android:background="@drawable/component_initial_headimg"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/workgrp_detail_user_nameid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/workgrp_detail_user_headid"
            android:textColor="#666666"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/workgrp_detail_publish_timeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/workgrp_detail_user_headid"
            android:layout_toRightOf="@id/workgrp_detail_user_headid"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/workgrp_reply_title_edit"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:src="@drawable/workgrp_detail_operation_btn"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/workgrp_detail_titleid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#333333"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/workgrp_detail_contentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:lineSpacingMultiplier="1.2"
        android:paddingTop="12dp"
        android:textColor="#666666"
        android:textSize="14sp"/>

    <com.aspirecn.corpsocial.bundle.workgrp.ui.widget.MyImageView
        android:id="@+id/workgrp_detail_content_pictureid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:src="@drawable/component_noimg_small"
        android:visibility="visible"/>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/workgrp_detail_praise_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="#999999"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/workgrp_point"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/workgrp_detail_reply_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="#999999"
        android:textSize="15sp"
        />
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/workgrp_detail_praise_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="14dp"
            android:background="@drawable/workgrp_nopraise_icon2"
            />

        <ImageView
            android:id="@+id/workgrp_detail_reply_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="14dp"
            android:background="@drawable/workgrp_reply_icon2"
            />
</LinearLayout>
</LinearLayout>