<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/custom_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:src="@drawable/app_icon"/>

    <TextView
        android:id="@+id/tv_custom_title"
        style="@style/NotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/custom_icon"
        android:layout_toRightOf="@id/custom_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="消息标题"
        android:textColor="@color/notification_title"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_custom_time"
        style="@style/NotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/custom_icon"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_custom_yet"
        style="@style/NotificationContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/custom_icon"
        android:layout_toRightOf="@id/custom_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_custom_content"
        style="@style/NotificationContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/custom_icon"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/tv_custom_yet"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="简介"
        android:textColor="@color/gray"
        android:textSize="12sp"/>

</RelativeLayout>