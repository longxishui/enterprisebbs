<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="10dp">

    <ImageView
        android:id="@+id/im_member_grid_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/im_chat_setting_head_selector"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/im_member_grid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:text="名称"
            android:textColor="#ff999999"/>

        <ImageView
            android:id="@+id/im_member_grid_friend_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/im_member_grid_title"
            android:src="@drawable/common_stranger_icon"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>