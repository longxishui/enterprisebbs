<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/black">

    <ru.truba.touchgallery.TouchView.TouchImageView
        android:id="@+id/im_chat_show_picture_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        />

    <!--
         <ProgressBar
        android:id="@+id/im_chat_show_picture_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:visibility="visible"/>
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <com.aspirecn.corpsocial.bundle.im.ui.ChatPictureLoadProgressWheel
            android:id="@+id/im_chat_show_picture_pb"
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="visible"
            ProgressWheel:barColor="#339BB9"
            ProgressWheel:barWidth="4dp"
            ProgressWheel:rimColor="#44000000"
            ProgressWheel:rimWidth="4dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:textColor="#222222"
            ProgressWheel:textSize="14sp"/>
    </LinearLayout>

</FrameLayout>