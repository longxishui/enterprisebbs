<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/listview_item_bg_selector">

    <RelativeLayout
        android:id="@+id/im_search_chat_msg_content_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="visible">

        <!-- 头像 -->
        <RelativeLayout
            android:id="@+id/im_search_chat_msg_head_portrait_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/im_search_chat_msg_head_portrait_tv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/im_main_tab_head_portrait_3"
                android:gravity="center"
                android:textColor="@color/text_color1"
                android:textSize="20sp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/im_search_chat_msg_head_portrait_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </RelativeLayout>
        <!-- 时间 -->

        <TextView
            android:id="@+id/im_search_chat_msg_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/im_search_chat_msg_head_portrait_layout"
            android:textColor="@color/text_color5"
            android:textSize="12sp"/>
        <!-- 名称 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/im_search_chat_msg_time_tv"
            android:layout_toRightOf="@id/im_search_chat_msg_head_portrait_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/im_search_chat_msg_usename_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:singleLine="true"
                android:textColor="@color/text_color3"
                android:textSize="15sp"/>

            <!-- 会话消息 -->

            <TextView
                android:id="@+id/im_search_chat_msg_msg_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="top"
                android:singleLine="true"
                android:textColor="@color/text_color4"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- 标题 -->

    <Button
        android:id="@+id/im_search_chat_msg_content_title_bt"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@null"
        android:gravity="left|bottom"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:textColor="@color/text_color5"
        android:textSize="@dimen/text_size_0"
        android:visibility="gone"/>

</RelativeLayout>