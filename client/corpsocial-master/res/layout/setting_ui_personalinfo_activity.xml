<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffeeeeee"
              android:orientation="vertical">

    <!-- 标题栏:高度48dp -->

    <FrameLayout
        android:id="@+id/layout_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffeeeeee"
        android:orientation="vertical">

        <include layout="@layout/public_line_horizontal_gray2_bottom"/>
        <!-- 头像 -->

        <RelativeLayout
            android:id="@+id/settings_ui_workbench_personalinfo_head_rl"
            style="@style/setting_ui_list_style"
            android:background="@drawable/setting_ui_workbench_item_bg_selector">

            <TextView
                style="@style/setting_ui_workbench_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/workbench_setting_personalinfo_head"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/settings_ui_workbench_arrow_right"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/settings_ui_workbench_personalinfo_head_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/imageView1"
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>

        <include layout="@layout/public_line_horizontal_gray2"/>

        <include layout="@layout/public_line_horizontal_gray2_bottom"/>
        <!-- 名字 -->


        <RelativeLayout
            android:id="@+id/settings_ui_workbench_personalinfo_name_rl"
            style="@style/setting_ui_list_style"
            android:background="@drawable/setting_ui_workbench_item_bg_selector">

            <TextView
                style="@style/setting_ui_workbench_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/workbench_setting_personalinfo_name"/>

            <TextView
                android:id="@+id/settings_ui_workbench_personalinfo_name_tv"
                style="@style/setting_ui_workbench_dynamictext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:text=""
                android:textColor="@color/edit_gray"/>
        </RelativeLayout>

        <!-- 手机号码 -->
        <RelativeLayout
            android:id="@+id/settings_ui_workbench_personalinfo_number_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/setting_ui_workbench_item_bg_selector"
            android:visibility="gone">

            <TextView
                style="@style/setting_ui_workbench_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/workbench_setting_personalinfo_number"/>

            <ImageView
                android:id="@+id/imageViewNumber"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/settings_ui_workbench_arrow_right"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/settings_ui_workbench_personalinfo_number_tv"
                style="@style/setting_ui_workbench_dynamictext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/imageViewNumber"
                android:paddingRight="10dp"
                android:text=""/>
        </RelativeLayout>

        <include layout="@layout/public_line_horizontal_gray2"/>
        <!-- 手机号码 -->

        <RelativeLayout
            android:id="@+id/settings_ui_workbench_personalinfo_phone_rl"
            style="@style/setting_ui_list_style"
            android:background="@drawable/setting_ui_workbench_item_bg_selector">

            <TextView
                style="@style/setting_ui_workbench_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/workbench_setting_personalinfo_phone"/>

            <TextView
                android:id="@+id/settings_ui_workbench_personalinfo_phone_tv"
                style="@style/setting_ui_workbench_dynamictext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:text=""/>


        </RelativeLayout>

        <include layout="@layout/public_line_horizontal_gray2"/>
        <!-- 公司部门 -->

        <RelativeLayout
            android:id="@+id/settings_ui_workbench_personalinfo_department_rl"
            style="@style/setting_ui_list_style"
            android:background="@drawable/setting_ui_workbench_item_bg_selector"
            android:visibility="gone">

            <TextView
                android:id="@+id/department"
                style="@style/setting_ui_workbench_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/workbench_setting_personalinfo_department"/>

            <TextView
                android:id="@+id/settings_ui_workbench_personalinfo_department_tv"
                style="@style/setting_ui_workbench_dynamictext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text=""/>

        </RelativeLayout>

        <include layout="@layout/public_line_horizontal_gray2"/>

        <include layout="@layout/public_line_horizontal_gray2_bottom"/>

        <!-- 个性签名 -->
        <RelativeLayout
            android:id="@+id/settings_ui_workbench_personalinfo_signature_rl"
            style="@style/setting_ui_list_style"
            android:background="@drawable/setting_ui_workbench_item_bg_selector">

            <TextView
                android:id="@+id/signature"
                style="@style/setting_ui_workbench_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/workbench_setting_personalinfo_signature"/>

            <TextView
                android:id="@+id/settings_ui_workbench_personalinfo_signature_tv"
                style="@style/setting_ui_workbench_dynamictext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:singleLine="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/settings_ui_workbench_arrow_right"
                android:textSize="16sp"/>

        </RelativeLayout>

        <include layout="@layout/public_line_horizontal_gray2"/>
    </LinearLayout>

</LinearLayout>