<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fcfcfc"
              android:orientation="vertical">

    <View
        android:id="@+id/biv_divider1_id"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_color2"/>

    <LinearLayout
        android:id="@+id/workgrp_detail_reply_layoutid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#F5F5F5"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/workgrp_detail_reply_voiceid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/im_chat_voice_icon"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/biv_more_btnid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/im_chat_more_bg_selector"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:background="@drawable/common_input_border"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/workgrp_detail_reply_inputid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:maxLength="200"
                android:maxLines="3"
                android:paddingBottom="8dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"/>

            <ImageButton
                android:id="@+id/biv_brow_select_viewid"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/im_chat_brow_bg_selector"/>

            <Button
                android:id="@+id/biv_pressed_voice_btnid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/im_chat_send_message_btn_bg_selector"
                android:text="@string/im_chat_pressed_to_say"
                android:textColor="#ff0079ff"
                android:visibility="gone"/>
        </RelativeLayout>

        <Button
            android:id="@+id/workgrp_detail_reply_btnid"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="6dp"
            android:layout_weight="2"
            android:background="@drawable/workgrp_comment_bg"
            android:text="@string/im_chat_send_msg"
            android:textColor="@color/level_2"/>

        <RelativeLayout
            android:id="@+id/workgrp_detail_reply_send_rl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="20dp"
            android:visibility="gone">

            <Button
                android:id="@+id/workgrp_detail_reply_btnid_balloon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/workgrp_balloon_01"
                android:gravity="center_horizontal"
                android:textColor="@color/level_2"/>

            <TextView
                android:id="@+id/workgrp_detail_reply_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="53"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/biv_divider2_id"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_color2"/>

    <LinearLayout
        android:id="@+id/biv_more_select_viewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/biv_photo_select_viewid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginRight="30dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/im_chat_picture_bg_selector"
            android:gravity="center_horizontal"
            android:text="@string/im_chat_image"
            android:textColor="@color/text_color5"
            android:textSize="@dimen/text_size_0"/>

        <TextView
            android:id="@+id/biv_camera_select_viewid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginLeft="30dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/im_chat_photograph_bg_selector"
            android:gravity="center_horizontal"
            android:text="@string/im_chat_take_photo"
            android:textColor="@color/text_color5"
            android:textSize="@dimen/text_size_0"/>

