    </LinearLayout>

    <include
        android:id="@+id/biv_brow_viewid"
        layout="@layout/im_chat_face_ll"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/biv_picture_layoutid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/biv_picture_showlayoutid"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/biv_picture_resultid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/biv_picture_deleteid"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/workgrp_biv_deletebg"
                android:scaleType="fitXY"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/biv_picture_addid"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="@drawable/workgrp_biv_addbg"
            android:scaleType="fitXY"/>
    </LinearLayout>

</LinearLayout>