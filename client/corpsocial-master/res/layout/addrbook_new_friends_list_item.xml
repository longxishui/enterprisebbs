<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_item_bg_selector">

    <ImageView
        android:id="@+id/addrbook_new_friends_item_head_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="12dp"
        android:src="@drawable/addrbook_contact"/>

    <TextView
        android:id="@+id/addrbook_new_friends_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/addrbook_new_friends_item_head_iv"
        android:singleLine="true"
        android:text="姓名"
        android:textColor="#ff333333"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/addrbook_new_friends_item_corp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/addrbook_new_friends_item_head_iv"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="75dp"
        android:layout_toRightOf="@id/addrbook_new_friends_item_head_iv"
        android:singleLine="true"
        android:text="让我们开始聊吧"
        android:textColor="#ff999999"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/addrbook_new_friends_item_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:text="已添加"
        android:textColor="#ff999999"
        android:textSize="15sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/addrbook_new_friends_item_add_bt"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/addrbook_new_friends_accept_btn_bg_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="接受"
        android:textColor="#ff666666"
        android:textSize="15sp"
        android:visibility="visible"/>

</RelativeLayout>
