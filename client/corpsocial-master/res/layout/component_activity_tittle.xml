<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <!-- 回退按钮 -->

        <ImageButton
            android:id="@+id/actionbar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/component_back_btn_bg_selector"
            android:visibility="visible"/>
        <!-- 企业微信小logo -->

        <View
            android:id="@+id/actionbar_small_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/actionbar_back_btn"
            android:background="@drawable/app_icon"
            android:visibility="gone"/>
        <!-- 标题 -->

        <TextView
            android:id="@+id/actionbar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/actionbar_small_logo"
            android:text="@string/register_phone"
            android:textColor="@color/text_color2"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/actionbar_login_status_tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_status_tips"
            android:textColor="#999"
            android:textSize="12sp"
            android:visibility="gone"/>

        <!-- 特殊按钮，按需求改动 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/actionbar_right_text_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:minWidth="60dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/component_rigth_btn_text_color_selector"
                android:textSize="18sp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/actionbar_right_btn3"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/actionbar_right_btn2"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/actionbar_right_btn"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
    <!-- 我是华丽的分割线 -->

    <include layout="@layout/public_line_horizontal_blue"/>

</LinearLayout>