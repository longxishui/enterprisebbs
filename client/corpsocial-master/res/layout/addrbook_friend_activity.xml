<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_conatacts_rl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.aspirecn.corpsocial.bundle.addrbook.ui.widget.ClearEditText
                android:id="@+id/filter_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/search_bar_edit_selector"
                android:drawableLeft="@drawable/search_bar_icon_normal"
                android:hint="请输入关键字"
                android:singleLine="true"
                android:textSize="15.0dip"
                android:visibility="gone"/>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ListView
                    android:id="@+id/country_lvcountry"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:divider="@null"/>

                <TextView
                    android:id="@+id/dialog"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_gravity="center"
                    android:background="@drawable/addrbook_friend_show_head_toast_bg"
                    android:gravity="center"
                    android:textColor="#8d8d8d"
                    android:textSize="30.0dip"
                    android:visibility="invisible"/>

                <com.aspirecn.corpsocial.bundle.addrbook.ui.widget.SideBar
                    android:id="@+id/sidrbar"
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right|center"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>